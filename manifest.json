{
    "manifest_version": 3,
    "name": "Google Calendar Show All",
    "version": "0.5",
    "description": "Add a button to show/hide all calendars in Google Calendar",
    "icons": {
        "16": "images/icon-128d.png",
        "32": "images/icon-128d.png",
        "48": "images/icon-128d.png",
        "128": "images/icon-128d.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://calendar.google.com/calendar/*"
            ]
        }
    ]
}