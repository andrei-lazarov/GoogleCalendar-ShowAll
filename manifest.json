{
    "manifest_version": 3,
    "name": "Google Calendar Show All",
    "version": "0.8.1",
    "description": "Quickly show, hide, or toggle all calendars in Google Calendar.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://calendar.google.com/calendar/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "google-calendar-show-all@andrei-lazarov.com",
            "strict_min_version": "58.0"
        }
    }
}