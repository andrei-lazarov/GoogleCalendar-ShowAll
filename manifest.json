{
    "manifest_version": 3,
    "name": "Google Calendar Show All",
    "version": "0.6",
    "description": "Add buttons to show/hide/toggle all calendars in Google Calendar",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://calendar.google.com/calendar/*"
            ]
        }
    ]
}